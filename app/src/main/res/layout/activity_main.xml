<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.boss.learn.MainActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4CAF50"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/abcd"
                android:onClick="openAbc" />

            <Button
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/onetwothree"
                android:onClick="openOneTwoThree" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shapes"
                android:onClick="openShape" />

            <Button
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/color"
                android:onClick="openColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/animals"
                android:onClick="openAnimal" />

            <Button
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/birds"
                android:onClick="openBird" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/fruits"
                android:onClick="openFruit" />

            <Button
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/vegitables"
                android:onClick="openVegetable" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/flowers"
                android:onClick="openFlower" />

            <Button
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/planets"
                android:onClick="openSolarSystem" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/test"
                android:onClick="openTest" />

            <Button
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/developer"
                android:onClick="openDeveloper" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>